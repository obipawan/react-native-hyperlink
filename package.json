{
	"name": "react-native-hyperlink",
	"version": "0.0.21",
	"description": "A <Hyperlink /> component for react-native to make urls, fuzzy links, emails etc clickable",
	"main": "dist/commonjs/index.js",
	"module": "dist/module/index.js",
	"types": "dist/typescript/src/index.d.ts",
	"react-native": "src/index.tsx",
	"source": "src/index",
	"files": [
		"src",
		"dist",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"lib",
		"android",
		"ios",
		"cpp",
		"react-native-hyperlink.podspec",
		"!lib/typescript/example",
		"!android/build",
		"!ios/build"
	],
	"scripts": {
		"test": "jest",
		"typescript": "tsc --noEmit",
		"lint": "eslint \"**/*.{js,ts,tsx}\"",
		"prepare": "bob build",
		"release": "release-it",
		"example": "yarn --cwd example",
		"bootstrap": "yarn example && yarn && yarn example pods"
	},
	"keywords": [
		"react",
		"react-native",
		"text",
		"link",
		"hyperlink",
		"autolink",
		"url"
	],
	"repository": "https://github.com/obipawan/react-native-hyperlink",
	"author": "Pawan Kumar",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/obipawan/react-native-hyperlink/issues"
	},
	"homepage": "https://github.com/obipawan/react-native-hyperlink#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"devDependencies": {
		"@arkweid/lefthook": "^0.7.7",
		"@babel/eslint-parser": "^7.18.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@react-native-community/eslint-config": "^3.0.2",
		"@release-it/conventional-changelog": "^5.0.0",
		"@types/jest": "^28.1.2",
		"@types/linkify-it": "^3.0.2",
		"@types/mdurl": "^1.0.2",
		"@types/react": "~17.0.21",
		"@types/react-native": "0.68.0",
		"commitlint": "^17.0.2",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.1",
		"pod-install": "^0.1.0",
		"prettier": "^2.0.5",
		"react": "18.0.0",
		"react-native": "0.69.4",
		"react-native-builder-bob": "^0.18.3",
		"release-it": "^15.0.0",
		"typescript": "^4.5.2"
	},
	"resolutions": {
		"@types/react": "17.0.21"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*"
	},
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/",
			"<rootDir>/dist/"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"eslintConfig": {
		"root": true,
		"parser": "@babel/eslint-parser",
		"extends": [
			"@react-native-community",
			"prettier"
		],
		"rules": {
			"prettier/prettier": [
				"error",
				{
					"arrowParens": "avoid",
					"bracketSameLine": false,
					"bracketSpacing": true,
					"embeddedLanguageFormatting": "auto",
					"htmlWhitespaceSensitivity": "css",
					"insertPragma": false,
					"jsxSingleQuote": true,
					"printWidth": 80,
					"proseWrap": "always",
					"quoteProps": "consistent",
					"requirePragma": false,
					"semi": true,
					"singleQuote": true,
					"tabWidth": 2,
					"trailingComma": "all",
					"useTabs": true,
					"singleAttributePerLine": true
				}
			]
		}
	},
	"eslintIgnore": [
		"node_modules/",
		"lib/",
		"dist/"
	],
	"prettier": {
		"arrowParens": "avoid",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": true,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "consistent",
		"requirePragma": false,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true,
		"singleAttributePerLine": true
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "dist",
		"targets": [
			"commonjs",
			"module",
			"typescript"
		]
	},
	"dependencies": {
		"linkify-it": "^4.0.1",
		"mdurl": "^1.0.1"
	}
}
